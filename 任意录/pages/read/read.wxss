/* pages/read/read.wxss */
.head{
  display: flex;
  justify-content: space-between;
  padding: 10rpx 20rpx;
  font-weight: bold;
  color: white;
  background-color: gainsboro;
  border-bottom: 1px solid silver;
}

.choose{
  position: absolute;
  right: 8rpx;
  width: 20%;
  background-color: white;
  border: 1px solid gainsboro;
  border-radius: 7%;
  text-align: center;
}
.to{
  padding: 20rpx;
  border-bottom: 1px solid gainsboro;
}

.section{
  padding: 0 20rpx 20rpx;
  font-size: 17px;
}
.top{
  height: 210px;
  width: 100%;
}
.forDi{
  position: absolute;
  top: 185px;
  font-size: 20px;
  padding: 20px 0;
  text-align: center;
  width: 100%;
  color: white;
}

.show-image{
  display: flex;
  flex-wrap:wrap;
  width: 100%;
}

.show-image image{
  height: 80px;
  width: 80px;
  padding: 10rpx;
}

.location{
  display: flex;
  align-items: center;
  font-size: 15px;
}

.addPay{
  display: flex;
  padding: 0 0 10rpx;
}

.add-t{
  min-width: 65%;
}

.add-p{
  min-width: 25%;
}

.list{
  display: flex;
  padding: 20rpx;
  border-bottom: 1px solid silver;
  font-size: 15px;
}
.user{
  color: dodgerblue;
}
.list-img{
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background-color: gainsboro;
}
.for-item{
  width: 80%;
  padding-left: 6px;
}

.title{
  font-weight: bold;
  font-size: 16.5px;
  color: black;
  padding: 5px 0;
}

.img{
  display: flex;
}

.img image{
  height: 70px;
  width: 70px;
  padding-right: 10px;
}

.time{
  font-size: 12px;
  color: gainsboro;
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.other{
  display: flex;
  align-items: center;
  padding: 0 0 15rpx 20rpx; 
  color: red;
}

.ping{
  text-align: center;
  background-color: dodgerblue;
  color: white;
  font-weight: bold;
  padding: 8rpx;
}

.send{
  display: flex;
  position: fixed;
  bottom: 0;
  width: 96%;
  background-color: gainsboro;
  padding: 20rpx;
  border-top: 1px solid gray;
  justify-content: space-between;
}
.send input{
  width: 77%;
  background-color: white;
  border-radius: 6px;
  height: 29px;
}