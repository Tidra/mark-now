/* pages/see/see.wxss */
.top{
  display: flex;
  justify-content: space-between;
}

.body{
  padding: 15rpx 0;
}

.first-list{
  border-bottom: 1px solid gainsboro;
  border-left-width: 10px;
  border-left-style: solid;
  border-radius: 10px;
}

.list{
  height: 150rpx;
  overflow: hidden;
  font-size: 15px;
  color: grey;
}

.other-list{
  display: flex;
}

.location{
  display: flex;
  align-items: center;
}

.title{
  font-weight: bold;
  font-size: 16.5px;
  color: black;
}

.img{
  height: 70px;
  width: 70px;
  padding-right: 10px;
}

.time{
  font-size: 12px;
  color: gainsboro;
  display: flex;
  justify-content: space-between;
}

.modal{
  display: flex;
  justify-content: center;
  padding-bottom: 10px;
}
.top-search{
  display: flex;
  border: 1px solid gainsboro;
  border-radius: 15px;
  padding: 1px 7px 0;
  font-size: 15px;
  align-items: center;
  width: 150px;
}
.top-search icon{
  height: 15px;
  padding-right: 4px;
  border-right: 1px solid gainsboro;
}
.top-search input{
  padding-left: 4px;
}

.share-list{
  display: flex;
  justify-content: space-between;
  padding-top: 5px;
}

.item{
  display: flex;
  width: 29%;
  justify-content: center;
  border: 1px solid gainsboro;
  border-radius: 15px;
}

.date{
  position: absolute;
  top: 9px;
  left: 48px;
}