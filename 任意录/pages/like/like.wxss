.first-list{
  padding: 15rpx 0;
  border-bottom: 1px solid gainsboro;
}

.list{
  font-size: 15px;
  color: grey;
}

.list-img{
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background-color: gainsboro;
}
.other-list{
  display: flex;
}
.for-item{
  width: 80%;
  padding-left: 6px;
}
.location{
  display: flex;
  align-items: center;
}

.title{
  font-weight: bold;
  font-size: 16.5px;
  color: black;
  padding: 5px 0;
}

.img{
  display: flex;
}

.img image{
  height: 70px;
  width: 70px;
  padding-right: 10px;
}

.time{
  font-size: 12px;
  color: gainsboro;
  display: flex;
  justify-content: space-between;
  width: 100%;
}
